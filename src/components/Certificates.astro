<section id="certificates" class="py-20 bg-white text-gray-900 dark:bg-secondary-950 dark:text-gray-100 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Certification</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        A collection of professional certifications I have obtained to enhance my skills and credibility
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {certificates.map((cert) => (
        <div class="bg-white border border-gray-100 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1 dark:bg-secondary-900/60 dark:border-secondary-800 dark:shadow-2xl dark:hover:shadow-primary-900/40">
          <!-- Certificate Image -->
          <div class="h-48 bg-gradient-to-br from-primary-200 via-primary-400 to-secondary-300 relative overflow-hidden dark:from-primary-500 dark:via-primary-700 dark:to-secondary-900">
            <img src={cert.image} alt={cert.title} class="w-full h-full object-cover" />
            <!-- Badge -->
            <div class="absolute top-4 right-4 bg-white/90 text-gray-800 rounded-full px-2 py-1 border border-gray-200 dark:bg-secondary-950/80 dark:text-primary-200 dark:border-secondary-700">
              <span class="text-xs font-semibold">{cert.date}</span>
            </div>
          </div>

          <!-- Certificate Content -->
          <div class="p-6">
            <div class="mb-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{cert.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">
                <span class="font-medium">Diterbitkan oleh:</span> {cert.issuer}
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-medium">ID:</span> {cert.credentialId}
              </p>
            </div>

            <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{cert.description}</p>

            <!-- Action Buttons -->
            <div class="flex space-x-3">
              <a 
                href={cert.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-full bg-primary-600 text-white text-center py-2 px-4 rounded-lg hover:bg-primary-500 transition-colors text-sm font-medium dark:bg-primary-500 dark:text-secondary-950 dark:hover:bg-primary-400"
              >
                Verifikasi
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="mt-16 text-center">
      <div class="bg-gray-50 rounded-xl p-8 max-w-4xl mx-auto border border-gray-100 dark:bg-secondary-900 dark:border-secondary-800">
        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Commitment to Learning</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          I believe that learning is a continuous process. Every certification I obtain 
          not only adds credibility, but also ensures that I keep up with the latest technology developments 
          and best practices in the industry.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 dark:text-primary-300 mb-2">6</div>
            <div class="text-gray-600 dark:text-gray-300">Professional Certification</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 dark:text-primary-300 mb-2">2+</div>
            <div class="text-gray-600 dark:text-gray-300">Years of Experience</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 dark:text-primary-300 mb-2">100%</div>
            <div class="text-gray-600 dark:text-gray-300">Commitment to Learning</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Download CV Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-br from-primary-500 to-secondary-600 rounded-xl p-8 max-w-3xl mx-auto shadow-2xl dark:from-primary-600 dark:to-secondary-700">
        <div class="flex flex-col items-center">
          <div class="bg-white rounded-full p-4 mb-4 dark:bg-secondary-900">
