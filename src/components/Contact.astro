---
// Contact component
const contactInfo = [
  {
    icon: "email",
    title: "Email",
    value: "afif@example.com",
    link: "mailto:afif@example.com",
    description: "Kirim email untuk pertanyaan atau kolaborasi"
  },
  {
    icon: "phone",
    title: "Telepon",
    value: "+62 812-3456-7890",
    link: "tel:+6281234567890",
    description: "Hubungi langsung untuk diskusi proyek"
  },
  {
    icon: "location",
    title: "Lokasi",
    value: "Jakarta, Indonesia",
    link: "https://maps.google.com",
    description: "Berdasarkan di Jakarta, tersedia untuk remote work"
  },
  {
    icon: "linkedin",
    title: "LinkedIn",
    value: "linkedin.com/in/afif",
    link: "https://linkedin.com/in/afif",
    description: "Koneksi profesional dan portfolio"
  }
];

const socialLinks = [
  {
    name: "GitHub",
    icon: "github",
    url: "https://github.com/afif",
    color: "hover:bg-gray-800"
  },
  {
    name: "Twitter",
    icon: "twitter",
    url: "https://twitter.com/afif",
    color: "hover:bg-blue-400"
  },
  {
    name: "Instagram",
    icon: "instagram",
    url: "https://instagram.com/afif",
    color: "hover:bg-pink-500"
  },
  {
    name: "Dribbble",
    icon: "dribbble",
    url: "https://dribbble.com/afif",
    color: "hover:bg-pink-600"
  }
];
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Hubungi Saya</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Mari berkolaborasi dan ciptakan sesuatu yang luar biasa bersama-sama
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">Informasi Kontak</h3>
        <div class="space-y-6">
          {contactInfo.map((info) => (
            <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex-shrink-0">
                {info.icon === "email" && (
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
                {info.icon === "phone" && (
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                )}
                {info.icon === "location" && (
                  <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                )}
                {info.icon === "linkedin" && (
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </div>
                )}
              </div>
              <div class="flex-1">
                <h4 class="text-lg font-semibold text-gray-900">{info.title}</h4>
                <a href={info.link} class="text-primary-600 hover:text-primary-700 font-medium">
                  {info.value}
                </a>
                <p class="text-gray-600 text-sm mt-1">{info.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- Social Links -->
        <div class="mt-8">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">Ikuti Saya</h4>
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a 
                href={social.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class={`w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center text-gray-600 transition-colors ${social.color}`}
              >
                {social.icon === "github" && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {social.icon === "twitter" && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}
                {social.icon === "instagram" && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.244c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.281c-.49 0-.928-.175-1.297-.49-.368-.315-.49-.753-.49-1.243 0-.49.122-.928.49-1.243.369-.315.807-.49 1.297-.49s.928.175 1.297.49c.368.315.49.753.49 1.243 0 .49-.122.928-.49 1.243-.369.315-.807.49-1.297.49z"/>
                  </svg>
                )}
                {social.icon === "dribbble" && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 5.373 0 12s5.374 12 12 12 12-5.373 12-12S18.626 0 12 0zm6.568 5.302c1.449 1.449 2.432 3.317 2.432 5.302 0 1.985-.983 3.853-2.432 5.302-1.449 1.449-3.317 2.432-5.302 2.432-1.985 0-3.853-.983-5.302-2.432C6.515 14.457 5.532 12.589 5.532 10.604s.983-3.853 2.432-5.302C9.413 3.853 11.281 2.87 13.266 2.87s3.853.983 5.302 2.432z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">Kirim Pesan</h3>
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nama</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="Nama lengkap Anda"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="email@example.com"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subjek</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
              placeholder="Subjek pesan"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Pesan</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors resize-none"
              placeholder="Tulis pesan Anda di sini..."
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-primary-700 transition-colors focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Kirim Pesan
          </button>
        </form>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-xl p-8 text-white">
        <h3 class="text-2xl font-semibold mb-4">Siap Memulai Proyek Baru?</h3>
        <p class="text-lg mb-6 opacity-90">
          Mari diskusikan ide Anda dan wujudkan menjadi solusi digital yang luar biasa
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="mailto:afif@example.com" 
            class="bg-white text-primary-600 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors"
          >
            Mulai Diskusi
          </a>
          <a 
            href="#projects" 
            class="border-2 border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors"
          >
            Lihat Portfolio
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
