            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- All Projects -->
    <div>
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8 text-center animate-fade-in-up animation-delay-400">All Projects</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project, index) => (
          <div class="project-card bg-white border border-gray-100 rounded-lg shadow hover:shadow-lg hover:scale-105 transition-all duration-500 dark:bg-secondary-950/60 dark:border-secondary-800 dark:shadow-lg dark:hover:shadow-primary-900/40" style={`animation-delay: ${index * 100}ms`}>
            <div class="h-40 bg-gradient-to-br from-secondary-200 via-primary-400 to-primary-500 dark:from-secondary-900 dark:via-primary-700 dark:to-primary-500 overflow-hidden">
