---

<section id="projects" class="py-20 bg-gray-50 text-gray-900 dark:bg-secondary-900 dark:text-gray-100 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 animate-fade-in-up">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">My Project</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        A collection of projects I have developed, ranging from data mining projects to web and mobile apps.
      </p>
    </div>

    <!-- Featured Projects -->
    <div class="mb-16 relative">
      <ShowcaseWall client:load />
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-8 text-center animate-fade-in-up animation-delay-200">Featured Project</h3>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {projects.filter(project => project.featured).map((project, index) => (
          <div class="project-card bg-white border border-gray-100 rounded-xl shadow-lg overflow-hidden hover:shadow-xl hover:scale-105 transition-all duration-500 dark:bg-secondary-950/70 dark:border-secondary-800 dark:shadow-2xl dark:hover:shadow-primary-900/40" style={`animation-delay: ${index * 150}ms`}>
            <div class="h-48 bg-gradient-to-br from-primary-200 via-primary-400 to-secondary-300 dark:from-primary-500 dark:via-primary-700 dark:to-secondary-900 overflow-hidden">
              <Image src={project.image} alt={project.title} width={600} height={400} loading="eager" fetchpriority="high" decoding="async" class="w-full h-full object-cover hover:scale-110 transition-transform duration-700" />
            </div>
            <div class="p-6">
              <h4 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{project.title}</h4>
              <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map((tech) => (
                  <span class="px-2 py-1 bg-secondary-100 text-secondary-800 rounded text-sm dark:bg-secondary-800 dark:text-secondary-100 hover:scale-110 transition-transform duration-200">{tech}</span>
                ))}
              </div>
              <div class="flex space-x-4">
                <a href={project.github} target="_blank" rel="noopener noreferrer" class="flex items-center text-primary-600 hover:text-primary-500 font-medium dark:text-primary-300 dark:hover:text-primary-200 hover:translate-x-1 transition-transform duration-200">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                  </svg>
                  {project.sourceLabel || "GitHub"}
                </a>
                {project.demo && (
                  <a href={project.demo} target="_blank" rel="noopener noreferrer" class="flex items-center text-secondary-600 hover:text-primary-600 font-medium dark:text-secondary-200 dark:hover:text-primary-200 hover:translate-x-1 transition-transform duration-200">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    Demo
                  </a>
                )}
